
package approach1_programming;

public class Chair 
{
	public int height;
	public String color;
}

package approach1_mainclass;

import approach1_programming.Chair;
public class MainClass4 
{
	public static void main(String[] args)
	{
		Chair c1=new Chair();
        Chair c2=new Chair();
        c1.height=50;
        c1.color="Blue";
        c2.height=60;
        c2.color="orange";
        System.out.println("-------Chair 1 Details-----");
        System.out.println("Chair 1 Height is: "+c1.height);
        System.out.println("Chair 1 Color is : "+c1.color);
        
        System.out.println("-------Chair 2 Details-----");
        System.out.println("Chair 2 Height is: "+c2.height);
        System.out.println("Chair 2 Color is : "+c2.color);
	}
}
