
package approach3_programming;

public class Marker 
{
	private int height;
	public Marker(int height)
	{
		if(height>=5 && height<=15)
		{
			System.out.println("Valid Marker Heigth , Intialization Sucessfully");
			this.height=height;
		}
		else
		{
			System.err.println("Invalid Marker Height ");
		}
	}
	public void display()
	{
		System.out.println("Marker Height is :"+height);
	}
}

package approach3_mainclass;
import approach3_programming.Marker;
public class MainClass2 
{
	public static void main(String[] args)
	{
		Marker m1=new Marker(20);		
		Marker m2=new Marker(90);		
		System.out.println("---- Marker 1 Details -------");
		m1.display();		
		System.out.println("---- Marker 2 Details -------");
		m2.display();
	}
}
//Output :
Invalid Marker Height 
Invalid Marker Height 
---- Marker 1 Details -------
Marker Height is :0
---- Marker 2 Details -------
Marker Height is :0
