

package approach3_programming;

public class Circle 
{
	private static double pi=3.14;
	private int r;
	
	public  Circle(int r)
	{
		if(r>=7 && r<=21)
		{
			System.out.println("Valid Radius And initialization Sucessfully");
			this.r=r;
		}
		else
		{
			System.err.println("invalid Radius");
		}
	}
	public void display()
	{
		System.out.println("Circle Pi is :"+pi);
		System.out.println("Circle radius is:"+r+" in cms");
	}
	public void findArea()
	{
		double area=pi*r*r;
		System.out.println("Area of Circle is :"+area+" in cms");
	}
	public void findCircumference()
	{
		double circumference=2*pi*r;
		System.out.println("Circumference of Circle is :"+circumference+" in cms");
	}
}

package approach3_mainclass;
import approach2_programming.Chair;
public class MainClass4 
{
	public static void main()
	{
		Chair c1=new Chair();
		c1.validColour("red");
		c1.validHeight(50);
		
		Chair c2=new Chair();
		c2.validColour("black");
		c2.validHeight(10);
	}
}
